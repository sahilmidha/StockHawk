<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/basic_layout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingLeft="@dimen/two_dp"
              android:paddingRight="@dimen/two_dp"
              android:paddingStart="@dimen/two_dp"
              android:paddingEnd="@dimen/two_dp"
>
    <TextView
        android:id="@+id/stock_symbol_widget"
        style="@style/WidegtStockSymbolTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="GOOG"
    />
    <TextView
        android:id="@+id/bid_price_widget"
        style="@style/BidPriceTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1000.00"
    />
</LinearLayout>


