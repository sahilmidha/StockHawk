<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/basic_layout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/two_dp"
              android:paddingRight="@dimen/two_dp"
              android:paddingStart="@dimen/two_dp"
              android:paddingEnd="@dimen/two_dp"
>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|left"
        android:orientation="vertical"
    >
        <TextView
            android:id="@+id/stock_symbol_widget"
            style="@style/WidegtStockSymbolTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|left|center_vertical"
            tools:text="GOOG"
        />
        <TextView
            android:id="@+id/bid_price_widget"
            style="@style/BidPriceTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/ten_sp"
            android:paddingEnd="@dimen/ten_sp"
            tools:text="1000.00"
        />

    </LinearLayout>

    <TextView
        android:id="@+id/change_widget"
        style="@style/PercentChangeTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/percent_change_pill"
        android:paddingLeft="@dimen/three_dp"
        android:paddingRight="@dimen/three_dp"
        android:paddingStart="@dimen/three_dp"
        android:paddingEnd="@dimen/three_dp"
        tools:text="100%"
    />
</LinearLayout>


